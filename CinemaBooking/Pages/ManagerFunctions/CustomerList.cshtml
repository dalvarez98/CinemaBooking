@page
@model CinemaBooking.Pages.ManagerFunctions.CustomerListModel
@{
}

@if(TempData["success"] != null)
{
	<h2 style="color: white">@TempData["success"]</h2>
}
else if(TempData["error"] != null)
{
	<h2 style="color: maroon;">@TempData["error"]</h2>
}

<style>
	body {
		background-color: black;
	}
	.but1 {
		background-color: maroon;
		color: white;
		transition-duration: 0.4s;
		border-radius: 4px;
	}
	.but1:hover {
		background-color: red;
		color: white;
	}
</style>

<div class="container p-3">
	<div class="row pt-4">
		<div class="col-6">
			<h2 style="color: white">Customer List</h2>
		</div>
		<div class="col-6 text-end">
			<a asp-page="CreateCustomer" class="btn but1">
				<i class="bi bi-pencil-square"></i> &nbsp;Create New Customer
			</a>
		</div>
	</div>

	<br>
	<form asp-page-handler="GenerateReport" method="post"> 
		<button class="btn but1">Generate Report</button>
	</form>
	<br>

	<table class="table table-bordered" style="color: white; width:100%">
		<thead style="color: white">
			<tr>
				<th>
					First Name
				</th>
				<th>
					Last Name
				</th>
				<th>
					DOB
				</th>
				<th>
					Address
				</th>
				<th>
					City
				</th>
				<th>
					State
				</th>
				<th>
					Zip Code
				</th>
				<th>
					Email Address
				</th>
				<th>
					Phone Number
				</th>
				<th>
					Username
				</th>
				<th>
					Password
				</th>
				<th>
					
				</th>
			</tr>
		</thead>
		<tbody style="color: white">
			@foreach(var obj in Model.ListOfCustomer)
			{
				<tr>
					<td width="50%">@obj.FirstN</td>
					<td width="50%">@obj.LastN</td>
					<td width="50%">@obj.DOB.ToShortDateString()</td>
					<td width="50%">@obj.Address</td>
					<td width="50%">@obj.City</td>
					<td width="50%">@obj.State</td>
					<td width="50%">@obj.ZipCode</td>
					<td width="50%">@obj.Email</td>
					<td width="50%">@obj.PhoneNum</td>
					<td width="50%">@obj.Username</td>
					<td width="50%">@obj.Password</td>
					<td>
						<div class="w-75 btn-group" role="group">
							<a asp-page="EditCustomer" asp-route-id="@obj.CustID" class="btn but1">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a asp-page="DeleteCustomer" asp-route-id="@obj.CustID" class="btn but1">
								<i class="bi bi-trash-fill"></i>
							</a>
						</div>
					</td>
				</tr>
			}
		</tbody>
	</table>
</div>