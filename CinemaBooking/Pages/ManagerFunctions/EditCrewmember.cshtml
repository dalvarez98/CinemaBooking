@page
@model CinemaBooking.Pages.ManagerFunctions.EditCrewmemberModel
@{
}

<style>
	body {
		background-color: black;
	}
	.but1 {
		background-color: maroon;
		color: white;
		transition-duration: 0.4s;
		border-radius: 4px;
	}
	.but1:hover {
		background-color: red;
		color: white;
	}
</style>

<form method="post">
	<input hidden asp-for="crewmember.EmpID" />
	<input hidden asp-for="crewmember.Password" />
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="pl-3" style="color: white">Edit Crewmember</h2>
			<hr style="color: white" />
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.FirstN">First Name</label>
			<input asp-for="crewmember.FirstN" class="form-control" maxlength="50" />
			<span asp-validation-for="crewmember.FirstN" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.LastN">Last Name</label>
			<input asp-for="crewmember.LastN" class="form-control" maxlength="50" />
			<span asp-validation-for="crewmember.LastN" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.DOB">DOB</label>
			<input asp-for="crewmember.DOB" class="form-control" readonly />
			<span asp-validation-for="crewmember.DOB" type="date" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.SSN">SSN</label>
			<input asp-for="crewmember.SSN" class="form-control" maxlength="11" readonly />
			<span asp-validation-for="crewmember.SSN" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.Address">Address</label>
			<input asp-for="crewmember.Address" class="form-control" maxlength="100" />
			<span asp-validation-for="crewmember.Address" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.City">City</label>
			<input asp-for="crewmember.City" class="form-control" maxlength="30" />
			<span asp-validation-for="crewmember.City" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.State">State</label>
			<select asp-for="crewmember.State">
				<option selected disabled>-- Select State --</option>
				<option value="AL">Alabama</option>
				<option value="AK">Alaska</option>
				<option value="AZ">Arizona</option>
				<option value="AR">Arkansas</option>
				<option value="CA">California</option>
				<option value="CO">Colorado</option>
				<option value="CT">Connecticut</option>
				<option value="DE">Delaware</option>
				<option value="FL">Florida</option>
				<option value="GA">Georgia</option>
				<option value="HI">Hawaii</option>
				<option value="ID">Idaho</option>
				<option value="IL">Illinois</option>
				<option value="IN">Indiana</option>
				<option value="IA">Iowa</option>
				<option value="KS">Kansas</option>
				<option value="KY">Kentucky</option>
				<option value="LA">Louisiana</option>
				<option value="ME">Maine</option>
				<option value="MD">Maryland</option>
				<option value="MA">Massachusetts</option>
				<option value="MI">Michigan</option>
				<option value="MN">Minnesota</option>
				<option value="MS">Mississippi</option>
				<option value="MO">Missouri</option>
				<option value="MT">Montana</option>
				<option value="NE">Nebraska</option>
				<option value="NV">Nevada</option>
				<option value="NH">New Hampshire</option>
				<option value="NJ">New Jersey</option>
				<option value="NM">New Mexico</option>
				<option value="NY">New York</option>
				<option value="NC">North Carolina</option>
				<option value="ND">North Dakota</option>
				<option value="OH">Ohio</option>
				<option value="OK">Oklahoma</option>
				<option value="OR">Oregon</option>
				<option value="PA">Pennsylvania</option>
				<option value="RI">Rhode Island</option>
				<option value="RI">South Carolina</option>
				<option value="SD">South Dakota</option>
				<option value="TN">Tennessee</option>
				<option value="TX">Texas</option>
				<option value="UT">Utah</option>
				<option value="VT">Vermont</option>
				<option value="VA">Virginia</option>
				<option value="WA">Washington</option>
				<option value="WV">West Virginia</option>
				<option value="WI">Wisconsin</option>
				<option value="WY">Wyoming</option>
			</select>
			<span asp-validation-for="crewmember.State" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.ZipCode">Zip Code</label>
			<input asp-for="crewmember.ZipCode" class="form-control" maxlength="9" />
			<span asp-validation-for="crewmember.ZipCode" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.Email">Email Address</label>
			<input asp-for="crewmember.Email" class="form-control" maxlength="50" />
			<span asp-validation-for="crewmember.Email" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.PhoneNum">Phone Number</label>
			<input asp-for="crewmember.PhoneNum" class="form-control" maxlength="15" placeholder="(888) 888-8888" />
			<span asp-validation-for="crewmember.PhoneNum" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.Salary">Salary</label>
			<input asp-for="crewmember.Salary" class="form-control" />
			<span asp-validation-for="crewmember.Salary" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.Username">Username</label>
			<input asp-for="crewmember.Username" class="form-control" maxlength="30" />
			<span asp-validation-for="crewmember.Username" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="crewmember.Password">Password</label>
			<input asp-for="crewmember.Password" class="form-control" maxlength="8" />
			<span asp-validation-for="crewmember.Password" class="text-danger"></span>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="crewmember.CinemaID">CinemaID</label>
			<input asp-for="crewmember.CinemaID" class="form-control" />
			<span asp-validation-for="crewmember.CinemaID" class="text-danger"></span>
		</div>
		<button type="submit" class="btn but1" style="width:150px">Update</button>
	</div>
</form>

@section Scripts {
	@{
	<partial name="_ValidationScriptsPartial"/>
	}
}