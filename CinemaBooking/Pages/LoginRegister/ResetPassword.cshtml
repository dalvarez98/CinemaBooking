@page
@model CinemaBooking.Pages.LoginRegister.ResetPasswordModel
@{
}
<style>
	body {
		background-color: black;
	}
</style>

@if(TempData["success"] != null)
{
	<h2 style="color: white">@TempData["success"]</h2>
}

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2 class="pl-3" style="color: white">Reset Password</h2>
			<hr style="color: white"/>
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="cust.FirstN">First Name</label>
			<input asp-for="cust.FirstN" value="@Model.cust.FirstN" class="form-control" maxlength="50" />
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="cust.LastN">Last Name</label>
			<input asp-for="cust.LastN" value="@Model.cust.LastN" class="form-control" maxlength="50" />
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="cust.Email">Email Address</label>
			<input asp-for="cust.Email" value="@Model.cust.Email" class="form-control" maxlength="50" />
		</div>
		<div class="mb-3" style="color: white">
			<label asp-for="cust.Password">Password</label>
			<input asp-for="cust.Password" value="@Model.cust.Password" class="form-control" maxlength="8" />
		</div>
		<button type="submit" class="btn" style="width:150px; background-color: maroon; color: white">Update</button>
	</div>
</form>