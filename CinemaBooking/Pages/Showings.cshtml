@page
@model CinemaBooking.Pages.ShowingsModel

<style>
    body{
    background-color: black;
    }
</style>

<div class="container p=5">
    <div class="row pt-4">
        <div class="col-6">
            <h2 style="color:red">Current Shows</h2>
        </div>
    </div>

    <table>
        <thread>
            <tr>
                <th scope="col" style="color:red">
                    Title
                </th>
                <th scope="col" style="color:red">
                    Genre
                </th>
                <th scope="col" style="color:red">
                    Rating
                </th>
                <th scope="col" style="color:red">
                    Director
                </th>
                <th scope="col" style="color:red">
                    Description
                </th>
            </tr>
        </thread>
        <tbody>
            @foreach(var obj in Model.Showings)
            {
                <tr>
                    <td width="20%" scope="row" style="color:red">@obj.MovieTitle</td>
                    <td width="20%" scope="row" style="color:red">@obj.Genre</td>
                    <td width="20%" scope="row" style="color:red">@obj.Rating</td>
                    <td width="20%" scope="row" style="color:red">@obj.Director</td>
                    <td width="20%" scope="row" style="color:red">@obj.Description</td>
                    <td scope="row" style="color:red">
                        <a asp-page="/Buys/ticket" asp-route-id="@obj.MovieID" class="btn btn-primary" style="background-color:red">Buy Tickets</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>